drop database if exists ih_plus;
create database ih_plus;

GRANT USAGE ON *.* TO 'ih_plus_admin'@'localhost';
DROP USER 'ih_plus_admin'@'localhost';
create user 'ih_plus_admin'@'localhost' identified by '????HIKE';
GRANT ALL ON ih_plus.* TO 'ih_plus_admin'@'localhost';


CREATE TABLE `original_hikes` (
  `hike_id` int(255) NOT NULL auto_increment,
  `name` varchar(255) NOT NULL,
  `username` varchar(255) NOT NULL,
  `description` varchar(255) NOT NULL,
  `date` varchar(255) collate utf8_unicode_ci NOT NULL,
  `start_lat` double NOT NULL,
  `startling` double NOT NULL,
  `ip_address` varchar(255) NOT NULL,
  PRIMARY KEY  (`hike_id`)
);



CREATE TABLE `original_vistas` (
  `id` int(255) NOT NULL auto_increment,
  `hike_id` int(255) NOT NULL,
  `action_id` int(255) NOT NULL,
  `longitude` double NOT NULL,
  `latitude` double NOT NULL,
  `date` varchar(255) collate utf8_unicode_ci NOT NULL,
  `note` varchar(255) collate utf8_unicode_ci default NULL,
  `filename` varchar(255) collate utf8_unicode_ci default NULL,
  PRIMARY KEY  (`id`)
);

CREATE TABLE `vista_actions` (
  `vista_id` int(11) NOT NULL auto_increment COMMENT 'pk',
  `verbiage` varchar(10000) collate utf8_unicode_ci NOT NULL,
  `action_type` set('photo','note') collate utf8_unicode_ci NOT NULL,
  PRIMARY KEY  (`vista_id`)
);


